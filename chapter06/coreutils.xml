      <varlistentry id="nproc">
        <term><command>nproc</command></term>
        <listitem>
          <para>打印一个进程中可用的处理器的总数</para>
          <indexterm zone="ch-system-coreutils nproc">
            <primary sortas="b-nproc">nproc</primary>
          </indexterm>
