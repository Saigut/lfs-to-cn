      <varlistentry id="nl">
        <term><command>nl</command></term>
        <listitem>
          <para>给指定文件中的行编号</para>
          <indexterm zone="ch-system-coreutils nl">
            <primary sortas="b-nl">nl</primary>
          </indexterm>
        </listitem>
